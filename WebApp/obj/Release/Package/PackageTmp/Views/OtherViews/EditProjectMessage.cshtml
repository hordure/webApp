
@{
    Layout = null;
}
<div >

    <div>
        <div><h4>Skilaboð - breyta</h4></div>
    </div>


    <hr>
    <div>
        <label class="col-md-2 control-label">Skilaboð</label>
        <div class="col-md-10">

            <textarea rows="2" ng-model="pmessage.projectmessage" style="margin-bottom:5px; width:100%">{{pmessage.projectmessage}}</textarea>
        </div>
    </div>
    <hr><hr>
    <div>
        <label class="col-md-2 control-label">Stofnað</label>
        <div class="col-md-10">
            <label  ng-model="pmessage.messagetimestamp" style="margin-bottom:5px; width:100%" rows="6" >{{pmessage.messagetimestamp| date:"dd.MM.yyyy   '   kl.'  HH:mm"}}</label>
        </div>
    </div>
    <hr><hr>
    <div>
        <label class="col-md-2 control-label">Verkefni</label>
        <div class="col-md-10">
            <label style="font-size:larger">{{pmessage.project_pid}}</label>
        </div>
    </div>
    <div>
        <label class="col-md-2 control-label">Starfsmaður</label>
        <div class="col-md-10">
            <label style="font-size:larger">{{pmessage.employee_eid}}</label>
        </div>
    </div>
 
    <div class="col-md-2"></div>
    
    <div class="col-md-10">
        <input type="submit" class="btn-success" value="Breyta" ng-click="edit()"/>
        <input type="submit" class="btn-default" value="Hætta við" ng-click="continue()" />
    </div>


</div>
