
@{
    Layout = null;
}
<div >

    <div>
        <div><h4>Skilaboð - breyta</h4></div>
    </div>


    <hr>
    <div>
        <label class="col-md-3 control-label">Kostnaður</label>
        <div class="col-md-9">

            <textarea rows="2" ng-model="pcost.cost" style="margin-bottom:5px; width:100%">{{pcost.cost}}</textarea>
        </div>
    </div>
    <hr><hr>
    <div>
        <label class="col-md-3 control-label">Lýsing</label>
        <div class="col-md-9">
            <textarea ng-model="pcost.costdescription" style="margin-bottom:5px; width:100%" rows="6">{{ pcost.costdescription }}</textarea>
        </div>
    </div>
    <hr><hr>
    <div>
        <label class="col-md-3 control-label">Dags kostnaðar</label>
        <div class="col-md-9">
            <label style="font-size:larger">{{pcost.costdate |date: "MMMM.dd.yyyy "}}</label>
            <input ng-model="pcost.costdate"  hh:mm"" type="datetime" />
        </div>
    </div>
    <div>
        <label class="col-md-3 control-label">Verkefni</label>
        <div class="col-md-9">
            <label style="font-size:larger">{{pcost2.project}}</label>
            
        </div>
    </div>
    <div>
        <label class="col-md-3 control-label">Starfsmaður</label>
        <div class="col-md-9">
            <label style="font-size:larger">{{pcost2.employee}}</label>
        </div>
    </div>
    <div>
        <label class="col-md-3 control-label">Hvenær skráð</label>
        <div class="col-md-9">
            <label style="font-size:larger">{{ pcost.costtimestamp| date: " dd.MM.yyyy 'kl.' HH:mm"}}</label>
        </div>
    </div>

    <div class="col-md-3"></div>

    <div class="col-md-9">
        <input type="submit" class="btn-success" value="Breyta" ng-click="edit()" />
        <input type="submit" class="btn-default" value="Hætta við" ng-click="continue()" />
    </div>


</div>